<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/space" />

    <android.support.v7.widget.CardView
        card_view:contentPadding="5dp"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:theme="@style/AppTheme"
        android:id="@+id/card"
        card_view:cardBackgroundColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space"
        android:layout_toStartOf="@+id/space2"
        android:layout_toEndOf="@+id/spacee3">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Tamamlanan Oturumlar (Toplam)"
                android:id="@+id/bugunText"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:textColor="#252525" />

            <TextView
                android:layout_below="@id/bugunText"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1e1d1d"
                android:id="@+id/finished_times" />




        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Space
        android:id="@+id/space2"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Space
        android:id="@+id/spacee3"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>