<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#424242">


    <TextView
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="25"
        android:id="@+id/minuteText"
        android:textColor="#d7ccc8"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/secondText" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:cpb_background_progressbar_color="#9E9E9E"
        app:cpb_background_progressbar_width="5dp"
        app:cpb_progressbar_color="#F44336"
        app:cpb_progressbar_width="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />


    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durdur"
        android:id="@+id/stopButton"
        android:layout_alignTop="@+id/continueButton"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        android:visibility="invisible"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Devam Et"
        android:id="@+id/continueButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/stopButton"
        android:layout_alignEnd="@+id/stopButton" />



    <TextView
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00"
        android:id="@+id/secondText"
        android:textColor="#d7ccc8"
        android:layout_alignBottom="@+id/minuteText"
        android:layout_alignEnd="@+id/stopButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Çalışma"
        android:id="@+id/breakOrMainTimer"
        android:layout_marginTop="24dp"
        android:textColor="#d7ccc8"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Başlat"
        android:id="@+id/startButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/stopButton" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İptal"
        android:id="@+id/cancelButton"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/stopButton"
        android:layout_marginStart="28dp" />

</RelativeLayout>